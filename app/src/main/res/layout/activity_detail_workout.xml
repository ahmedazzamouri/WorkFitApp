<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/workouts"
                android:fontFamily="@font/indigo_daisy"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:layout_marginStart="-20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:text="@string/name_workout"
                android:textColor="@color/black"
                android:fontFamily="@font/indigo_daisy"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/workoutNameView"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:fontFamily="@font/indigo_daisy"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/workoutType"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="-70sp"/>

            <TextView
                android:id="@+id/workoutTypeView"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100sp"
                android:layout_height="60dp"
                android:text="@string/workoutDescription"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/indigo_daisy"
                android:textSize="30sp"
                android:gravity="center"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/workoutDescriptionView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/exercises"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="@font/indigo_daisy"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/exerciseListView"
                android:layout_width="match_parent"
                android:layout_height="505dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>